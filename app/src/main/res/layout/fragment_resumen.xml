<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragmentos.Resumen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumen" />

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regresar"
                app:icon="@drawable/ic_arrow_back"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
            </Button>


            <EditText
                android:id="@+id/txtNumeroCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/balsamiq_sans"
                android:gravity="top"
                android:hint="Ingrese numero de cuenta"
                android:paddingLeft="200dp"
                android:textSize="25sp"

                >

            </EditText>

            <Button
                android:id="@+id/btnBuscarCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Buscar cuenta"
                >
            </Button>

            <TextView
                android:id="@+id/titulo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Con cuenta ingresada:" />
            <TextView
                android:id="@+id/textoServicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta del servicio" />





        </LinearLayout>
        <!-- TODO: Update blank fragment layout -->

    </FrameLayout>
</layout>
